<h1 class="text-center my-5">Voici mes tâches à faire:</h1>
<div class="card m-5">
  <div class="mb-3">
    <ul class="list-group m-5">
      <% @task.each do |task|%>
        <div class="d-flex justify-content-between my-3 ">
          <li class="list-group-item"><input class="form-check-input me-1" type="checkbox" checked><%= link_to task.title, task_path(task)%>
          <%= link_to "Delete", task_path(task),:class => ' btn btn-primary', data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%></li>
        </div>
      <% end %>
    </ul>
  </div>
  <div class="mb-3 text-center">
  <%= link_to 'Ajouter une tâche', new_task_path(), :class => 'btn btn-primary'%>
  </div>
</div>
